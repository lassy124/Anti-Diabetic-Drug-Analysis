# ------------------------------------------------------

# Install libraries (if needed)
# !pip install pandas matplotlib numpy

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

# -------------------------------
# STEP 1: Create the Dataset
# -------------------------------

data = {
    "Patient_ID": ["P001","P002","P003","P004","P005","P006","P007","P008","P009","P010"],
    "Age": [45,52,60,38,49,57,62,41,55,48],
"Gender": ["M","F","M","F","M","F","F","M","M","F"],
    "Drug_Name": ["Metformin","Glimepiride","Metformin","Pioglitazone","Insulin",
                  "Metformin","Insulin","Glimepiride","Metformin","Pioglitazone"],
    "Diagnosis": ["Type 2 Diabetes"]*10,
    "Prescription_Date": ["2024-01-12","2024-01-15","2024-01-18","2024-01-20","2024-01-21",
                          "2024-01-22","2024-01-25","2024-01-25","2024-01-28","2024-01-30"],
    "Dose": ["500mg","1mg","500mg","15mg","10 units","500mg","10 units","1mg","500mg","15mg"],
    "Cost": [120,180,120,250,600,120,600,180,120,250]
}

df = pd.DataFrame(data)

# -------------------------------
# STEP 2: Data Cleaning
# -------------------------------

# Convert dates
df["Prescription_Date"] = pd.to_datetime(df["Prescription_Date"])

# Remove duplicates
df = df.drop_duplicates()
# Trim spaces in drug names
df["Drug_Name"] = df["Drug_Name"].str.strip()

# Standardize case
df["Drug_Name"] = df["Drug_Name"].str.title()

print("Cleaned Dataset:")
print(df)
print("-" * 50)

# -------------------------------
# STEP 3: Basic Analysis
# -------------------------------

# 1. Total Patients
total_patients = df["Patient_ID"].nunique()
print("Total Patients:", total_patients)
print("-" * 50)

# 2. Drug Usage Count
drug_usage = df.groupby("Drug_Name")["Patient_ID"].count()
print("Drug Usage Count:")
print(drug_usage)
print("-" * 50)
# 3. Age-wise Prescription Count
age_counts = df.groupby("Age")["Patient_ID"].count()
print("Age-wise Prescription Count:")
print(age_counts)
print("-" * 50)

# -------------------------------
# STEP 4: Visualizations (Charts)
# -------------------------------

# -------- Chart 1: Drug Usage -------
plt.figure(figsize=(7,5))
drug_usage.plot(kind='bar')
plt.title("Drug Usage Count")
plt.xlabel("Drug Name")
plt.ylabel("Number of Patients")
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

# -------- Chart 2: Age-wise Prescription -------
plt.figure(figsize=(7,5))
age_counts.plot(kind='line', marker='o')
plt.title("Age-wise Prescription Count")
plt.xlabel("Age")
plt.ylabel("Number of Patients")
plt.grid(True)
plt.tight_layout()
plt.show()

# -------- Chart 3: Gender Distribution -------
gender_counts = df["Gender"].value_counts()
plt.figure(figsize=(6,6))
gender_counts.plot(kind='pie', autopct='%1.1f%%')
plt.title("Gender Distribution")
plt.ylabel("")
plt.tight_layout()
plt.show()
